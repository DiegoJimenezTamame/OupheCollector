<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="local.ouphecollector.fragments.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_search"
        android:name="local.ouphecollector.fragments.SearchFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_nav_search_to_nav_card_detail"
            app:destination="@id/nav_card_detail">
            <argument
                android:name="cardName"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/nav_card_detail"
        android:name="local.ouphecollector.fragments.CardDetailFragment"
        android:label="@string/menu_card_detail"
        tools:layout="@layout/fragment_card_detail">
        <argument
            android:name="cardName"
            app:argType="string" />
    </fragment>
</navigation>